<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Unsere Produkte</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="row navbar">
            <div class="col-12">
                <ul class="nav">
                    <li class="nav-item">
                        <a href="/" class="nav-link">Startseite</a>
                    </li>
                    <% if(displayLink) { %>
                    <li class="nav-item">
                        <a href="/neuproduct" class="nav-link">Neuprodukt</a>
                    </li>
                    <li class="nav-item">
                        <a href="/aufnahme" class="nav-link">Produktannahme</a>
                    </li>
                    <li class="nav-item">
                        <a href="/versand" class="nav-link">Produktausgabe</a>
                    </li>
                    <li class="nav-item">
                        <a href="/productliste" class="nav-link">Produktliste</a>
                    </li>
                    <li class="nav-item">
                        <a href="/logout" class="nav-link">Logout</a>
                    </li>
                    <% } %>
                    <% if(!displayLink) { %>
                    <li class="nav-item">
                        <a href="/login" class="nav-link">Login</a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>

    <div class="container" style="margin-bottom: 2rem;">
        <div class="row">
            <div class="col-6" s>
                <h1>Produktaufnahme </h1>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <form action="/productaufnahme" method="post" enctype="multipart/form-data">
                    <div class="mb-3 row">
                        <label class="col-sm-1 col-form-label">Produkt: </label>
                        <div class="col-sm-4">
                            <select name="name" class="form-select" aria-label="Default select example">
                                <% items.forEach( product=> { %>
                                    <option>
                                        <%= product.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-1 col-form-label">Menge:</label>
                        <div class="col-sm-2">
                            <input name="menge" type="number" class="form-control">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Best√§tigen</button>
                </form>
            </div>
        </div>
    </div>

</body>

</html>